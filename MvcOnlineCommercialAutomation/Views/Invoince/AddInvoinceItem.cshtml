@model MvcOnlineCommercialAutomation.Models.Classes.InvoinceItem

@{
    ViewBag.Title = "AddInvoinceItem";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>New Invoince Item Page</h2>
<br />

<form class="form-group" method="post">
    @Html.LabelFor(x => x.Description)
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Amount)
    @Html.TextBoxFor(x => x.Amount, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.UnitPrice)
    @Html.TextBoxFor(x => x.UnitPrice, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Total)
    @Html.TextBoxFor(x => x.Total, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.InvoinceID)
    @Html.TextBoxFor(x => x.InvoinceID, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Save</button>
</form>

