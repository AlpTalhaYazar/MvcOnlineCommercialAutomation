@model List<MvcOnlineCommercialAutomation.Models.Classes.Invoince>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped" style="margin-top: 20px">
    <tr>
        <th style="text-align: center">Serial No - Item No</th>
        <th>Tax Office</th>
        <th>Date</th>
        <th>Hour</th>
        <th>Consigner</th>
        <th>Recipient</th>
        <th>Total</th>
        <th>Update</th>
        <th>Details</th>
        <th>Popup List</th>
        <th>New Item</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td align="center">@x.InvoinceSerialNo - @x.InvoinceItemNo</td>
            <td>@x.TaxOffice</td>
            <td>@x.Date.ToShortDateString()</td>
            <td>@x.Hour</td>
            <td>@x.Consigner</td>
            <td>@x.Recipient</td>
            <td>@x.Total $</td>
            <td>
                <a href="/Invoince/BringInvoince/@x.InvoinceID" class="btn btn-warning">Update</a>
            </td>
            <td>
                <a href="/Invoince/InvoinceDetail/@x.InvoinceID" class="btn btn-default" style="background-color: blue; color: white">Details</a>
            </td>
            <td>
                <a href="/Invoince/InvoinceDetail/@x.InvoinceID" class="btn btn-default" style="background-color: #c38d9e; color: white">Popup</a>
            </td>
            <td>
                <a href="/Invoince/InvoinceDetail/@x.InvoinceID" class="btn btn-default" style="background-color: #41b3a3; color: white">Item</a>
            </td>
        </tr>
    }
</table>

<a href="/Invoince/AddInvoince" class="btn btn-info">Add Invoince</a>

<br/>
<br/>

<button type="button" class="btn" style="background-color: #41b3a3; color: white" data-toggle="modal" data-target="#modal1">Popup Window</button>

<div class="modal" id="modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Popup Dialog Window</h2>
            </div>
            <div class="modal-body">
                <table class="table table-hover">
                    <tr>
                        <th>Serial No</th>
                        <th>Item No</th>
                        <th>Total</th>
                    </tr>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.InvoinceSerialNo</td>
                            <td>@x.InvoinceItemNo</td>
                            <td>@x.Total</td>
                        </tr>
                    }
                </table>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Okay</button>
            </div>
        </div>
    </div>
</div>