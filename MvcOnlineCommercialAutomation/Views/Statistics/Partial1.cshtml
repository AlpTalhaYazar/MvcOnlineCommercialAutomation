@model IEnumerable<MvcOnlineCommercialAutomation.Models.Classes.ClassGroup1>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Category Table</h3>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Category Name</th>
                    <th>Progress</th>
                    <th style="width: 40px">Ratio</th>
                </tr>
            </thead>
            <tbody>
                @{ int CategoryNo = 0; }
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{CategoryNo++;}@CategoryNo</td>
                        <td>@x.Category</td>
                        @if ((((x.Percent) * 100) / (ViewBag.d1)) > 0 && (((x.Percent) * 100) / (ViewBag.d1)) <= 20)
                        {
                            <td style="vertical-align:middle">
                                <div class="progress progress-xs">
                                    <div class="progress-bar" style="background-color: #82c272; width:@(((x.Percent) * 100) / (ViewBag.d1))%"></div>
                                </div>
                            </td>
                            <td style="text-align:center"><span class="badge" style="color: white; background-color: #82c272">@(((x.Percent) * 100) / (ViewBag.d1))%</span></td>
                        }
                        @if ((((x.Percent) * 100) / (ViewBag.d1)) > 20 && (((x.Percent) * 100) / (ViewBag.d1)) <= 40)
                        {
                            <td style="vertical-align:middle">
                                <div class="progress progress-xs">
                                    <div class="progress-bar" style="background-color: #00a88f; width: @(((x.Percent) * 100) / (ViewBag.d1))%"></div>
                                </div>
                            </td>
                            <td style="text-align:center"><span class="badge" style="color: white; background-color: #00a88f">@(((x.Percent) * 100) / (ViewBag.d1))%</span></td>
                        }
                        @if ((((x.Percent) * 100) / (ViewBag.d1)) > 40 && (((x.Percent) * 100) / (ViewBag.d1)) <= 60)
                        {
                            <td style="vertical-align:middle">
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="background-color: #0087ac; width: @(((x.Percent) * 100) / (ViewBag.d1))%"></div>
                                </div>
                            </td>
                            <td style="text-align:center"><span class="badge" style="color: white; background-color: #0087ac">@(((x.Percent) * 100) / (ViewBag.d1))%</span></td>
                        }
                        @if ((((x.Percent) * 100) / (ViewBag.d1)) > 60 && (((x.Percent) * 100) / (ViewBag.d1)) <= 80)
                        {
                            <td style="vertical-align:middle">
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="background-color: #005faa; width: @(((x.Percent) * 100) / (ViewBag.d1))%"></div>
                                </div>
                            </td>
                            <td style="text-align:center"><span class="badge" style="color: white; background-color: #005faa">@(((x.Percent) * 100) / (ViewBag.d1))%</span></td>
                        }
                        @if ((((x.Percent) * 100) / (ViewBag.d1)) > 80 && (((x.Percent) * 100) / (ViewBag.d1)) <= 100)
                        {
                            <td style="vertical-align:middle">
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="background-color: #323b81; width: @(((x.Percent) * 100) / (ViewBag.d1))%"></div>
                                </div>
                            </td>
                            <td style="text-align:center"><span class="badge" style="color: white; background-color: #323b81">@(((x.Percent) * 100) / (ViewBag.d1))%</span></td>
                        }
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <div class="card-footer clearfix">
        <ul class="pagination pagination-sm m-0 float-right">
            <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
        </ul>
    </div>
</div>
