@model IEnumerable<MvcOnlineCommercialAutomation.Models.Classes.ClassGroup4>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Striped Full Width Table</h3>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
            <tr>
                <th style="width: 10px">#</th>
                <th>Task</th>
                <th>Progress</th>
                <th style="width: 40px">Label</th>
            </tr>
            </thead>
            <tbody>
            @{ var BrandNo = 0; }
            @foreach (var x in Model)
            {
                <tr>
                    <td>
                        @{ BrandNo++; }
                        @BrandNo
                    </td>
                    <td>@x.Brand</td>
                    @if (x.Percent * 100 / ViewBag.d4 > 0 && x.Percent * 100 / ViewBag.d4 <= 20)
                    {
                        <td style="vertical-align: middle">
                            <div class="progress progress-xs">
                                <div class="progress-bar" style="background-color: #82c272; width: @(x.Percent * 100 / ViewBag.d4)%"></div>
                            </div>
                        </td>
                        <td style="text-align: center">
                            <span class="badge" style="background-color: #82c272; color: white;">@(x.Percent * 100 / ViewBag.d4)%</span>
                        </td>
                    }
                    @if (x.Percent * 100 / ViewBag.d4 > 20 && x.Percent * 100 / ViewBag.d4 <= 40)
                    {
                        <td style="vertical-align: middle">
                            <div class="progress progress-xs">
                                <div class="progress-bar" style="background-color: #00a88f; width: @(x.Percent * 100 / ViewBag.d4)%"></div>
                            </div>
                        </td>
                        <td style="text-align: center">
                            <span class="badge" style="background-color: #00a88f; color: white;">@(x.Percent * 100 / ViewBag.d4)%</span>
                        </td>
                    }
                    @if (x.Percent * 100 / ViewBag.d4 > 40 && x.Percent * 100 / ViewBag.d4 <= 60)
                    {
                        <td style="vertical-align: middle">
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-danger" style="background-color: #0087ac; width: @(x.Percent * 100 / ViewBag.d4)%"></div>
                            </div>
                        </td>
                        <td style="text-align: center">
                            <span class="badge" style="background-color: #0087ac; color: white;">@(x.Percent * 100 / ViewBag.d4)%</span>
                        </td>
                    }
                    @if (x.Percent * 100 / ViewBag.d4 > 60 && x.Percent * 100 / ViewBag.d4 <= 80)
                    {
                        <td style="vertical-align: middle">
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-danger" style="background-color: #005faa; width: @(x.Percent * 100 / ViewBag.d4)%"></div>
                            </div>
                        </td>
                        <td style="text-align: center">
                            <span class="badge" style="background-color: #005faa; color: white;">@(x.Percent * 100 / ViewBag.d4)%</span>
                        </td>
                    }
                    @if (x.Percent * 100 / ViewBag.d4 > 80 && x.Percent * 100 / ViewBag.d4 <= 100)
                    {
                        <td style="vertical-align: middle">
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-danger" style="background-color: #323b81; width: @(x.Percent * 100 / ViewBag.d4)%"></div>
                            </div>
                        </td>
                        <td style="text-align: center">
                            <span class="badge" style="background-color: #323b81; color: white;">@(x.Percent * 100 / ViewBag.d4)%</span>
                        </td>
                    }
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>