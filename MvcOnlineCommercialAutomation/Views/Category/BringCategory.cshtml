@model MvcOnlineCommercialAutomation.Models.Classes.Category

@{
    ViewBag.Title = "BringCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br/>
<h2>Category Update Page</h2>
<br/>

@using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.CategoryName)
        @Html.TextBoxFor(x => x.CategoryName, new {@class = "form-control"})
        @Html.HiddenFor(x => x.CategoryID)
    </div>
    <button class="btn btn-info">Save</button>
}